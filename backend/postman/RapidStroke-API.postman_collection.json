    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const responseJson = pm.response.json();",
                                    "    pm.environment.set('auth_token', responseJson.data.token);",
                                    "    pm.environment.set('user_id', responseJson.data.user.id);",
                                    "    pm.test('Registration successful', function () {",
                                    "        pm.expect(responseJson.success).to.be.true;",
                                    "        pm.expect(responseJson.data.token).to.exist;",
                                    "    });",
                                    "} else {",
                                    "    pm.test('Registration failed', function () {",
                                    "        pm.expect(pm.response.code).to.not.equal(201);",
                                    "    });",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Dr. Sarah Johnson\",\n  \"email\": \"sarah.johnson@hospital.com\",\n  \"password\": \"securepassword123\",\n  \"dob\": \"1985-03-15\",\n  \"role\": \"clinician\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "register"
                            ]
                        },
                        "description": "Register a new user with role (patient, clinician, radiologist)"
                    }
